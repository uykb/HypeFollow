# Application Settings
NODE_ENV=production
# trading mode: equal | fixed | scaled
TRADING_MODE=fixed
# fixed ratio (0.1 means 10% of followed position size)
FIXED_RATIO=0.1
# equal ratio (1.0 means same size as followed position)
EQUAL_RATIO=1.0

# API Keys (REQUIRED)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_secret
BINANCE_TESTNET=false

# Optional Security
# BINANCE_ALLOWED_IPS=1.2.3.4

# Redis Settings (Default is 'redis' for docker-compose)
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring
MONITORING_PORT=49618

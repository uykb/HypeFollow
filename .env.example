# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
# Set to true for testnet, false for production
BINANCE_TESTNET=false

# Security: List of IPs allowed to use this API key (for reminder only)
# BINANCE_ALLOWED_IPS=127.0.0.1,your_server_ip

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Hyperliquid Configuration
# Mainnet WebSocket URL
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws

# App Configuration
LOG_LEVEL=info

# Trading Configuration
# Follow mode: 'equal' (proportional) or 'fixed' (fixed ratio)
TRADING_MODE=equal

# Equal ratio multiplier (only for equal mode)
# Example: 20 means 20x leverage amplification
# Calculation: quantity = hl_quantity * (my_equity / hl_equity) * EQUAL_RATIO
EQUAL_RATIO=1.0

# Fixed ratio multiplier (only for fixed mode)
# Example: 0.1 means always follow 10% of Smart Money's position
# Calculation: quantity = hl_quantity * FIXED_RATIO
FIXED_RATIO=0.1

# Account info cache TTL in seconds
ACCOUNT_CACHE_TTL=60
